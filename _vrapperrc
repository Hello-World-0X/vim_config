"indent
" shift width, indent width
set sw=4
" ts, tabstop width
set tabstop=4
" extendtab
" set et

" ignore case while search
set ignorecase
set smartcase
set clipboard=unnamedplus

" hilight current line
set cursorline
" hilight column
set cursorcolumn

" nmap cc <M-z>
" vmap cc <M-z>
" nmap CC <M-z>
" vmap CC <M-z>
" nmap cz <M-z>
" nmap cx <M-z>
" vmap cz <M-z>
" vmap cx <M-z>

" redirect for ESC
" imap fds <ESC>
" map fds <ESC>
" omap fds <ESC>
" imap FDS <ESC>:echo "CAPS_LOCK!"<CR><ESC>
" map FDS <ESC>:echo "CAPS_LOCK!"<CR><ESC>
" omap FDS <ESC>:echo "CAPS_LOCK!"<CR><ESC>

set hls

" deletion, use backspace as backspace key, using black hole register
nmap <silent> <BS> h"_x
vmap <silent> <BS> h"_x

" vim: ft=vim tw=80 sw=2 ts=2 et
